{
  "name": "graphql_server",
  "version": "0.0.1",
  "description": "A server with data available over a graphql endpoint",
  "license": "MIT",
  "private": true,
  "config": {
    "env_dev": ". ../../env.sh"
  },
  "scripts": {
    "dev": "concurrently -c 'magenta' 'tsc -w' '$npm_package_config_env_dev && nodemon dist/index.js'",
    "build": "tsc",
    "serve": "$npm_package_config_env_dev && node dist/index.js",
    "update-types": "$npm_package_config_env_dev && npx supabase gen types typescript --project-id \"$SUPABASE_REFERENCE_ID\" > types/supabase.d.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.24.0",
    "axios": "^1.4.0",
    "cheerio": "^1.0.0-rc.12",
    "fastify": "^4.17.0",
    "mercurius": "^13.0.0",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "@types/showdown": "^2.0.1",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "pino-pretty": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
