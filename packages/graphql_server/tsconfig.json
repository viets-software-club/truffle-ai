{
  "extends": "ts-config-truffle/index.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", ".husky"]
}
